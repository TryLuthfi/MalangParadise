<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Register">

    <ImageView
        android:layout_marginLeft="-200dp"
        android:layout_marginRight="-50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/getstarted" />

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#61FF5722"
        android:layout_height="match_parent" >
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="100dp"
            android:background="@drawable/logomp2"
            android:layout_height="70dp" />

        <LinearLayout
            android:layout_marginTop="-10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Malang"
                android:fontFamily="@font/alatsi_regular"
                android:textSize="38dp"
                android:textColor="@color/colorBlue"
                android:gravity="center"
                android:layout_margin="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paradise"
                android:textSize="38dp"
                android:fontFamily="@font/alatsi_regular"
                android:textColor="@color/colorAccent"
                android:layout_margin="4dp"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/satu"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_above="@+id/dua"
        android:background="@drawable/form"
        android:layout_height="50dp" >

        <EditText
            android:ems="1"
            android:inputType="text"
            android:id="@+id/nama"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:background="@null"
            android:hint="Name" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:id="@+id/dua"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/form"
        android:layout_height="50dp" >

        <EditText
            android:ems="1"
            android:inputType="text"
            android:id="@+id/username"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:background="@null"
            android:hint="Username" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:id="@+id/tiga"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_below="@id/dua"
        android:background="@drawable/form"
        android:layout_height="50dp" >

        <EditText
            android:ems="1"
            android:inputType="textPassword"
            android:id="@+id/password"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:background="@null"
            android:hint="Password" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:id="@+id/register"
        android:layout_below="@id/tiga"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/button_yellow"
        android:layout_height="50dp" >

        <TextView
            android:gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="R E G I S T E R" />

    </LinearLayout>

</RelativeLayout>