<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EditProfile">

    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:gravity="center">

            <ImageView
                android:id="@+id/back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/back"/>

            <ImageView
                android:id="@+id/cancel"
                android:visibility="invisible"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/cancel"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Malang"
                android:fontFamily="@font/alatsi_regular"
                android:textSize="24dp"
                android:textColor="@color/colorBlue"
                android:gravity="center"
                android:layout_margin="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paradise"
                android:textSize="24dp"
                android:fontFamily="@font/alatsi_regular"
                android:textColor="@color/colorAccent"
                android:layout_margin="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="125dp"
            android:layout_marginVertical="10dp"
            android:layout_gravity="center"
            android:layout_height="125dp" >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="40dp"
                android:background="@drawable/plus_image"
                android:layout_height="40dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/form"
            android:paddingHorizontal="16dp"
            android:layout_height="50dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username           :"
                android:textSize="15sp"/>

            <EditText
                android:maxEms="1"
                android:inputType="text"
                android:id="@+id/username"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:background="@null"
                android:hint="Username" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/form"
            android:paddingHorizontal="16dp"
            android:layout_height="50dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name                  :"
                android:textSize="15sp"/>

            <EditText
                android:maxEms="1"
                android:inputType="text"
                android:id="@+id/name"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:background="@null"
                android:hint="Name" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/form"
            android:paddingHorizontal="16dp"
            android:layout_height="50dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password Lama :"
                android:textSize="15sp"/>

            <EditText
                android:maxEms="1"
                android:inputType="textPassword"
                android:id="@+id/password"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:background="@null"
                android:hint="Password" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/form"
            android:paddingHorizontal="16dp"
            android:layout_height="50dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password Baru   :"
                android:textSize="15sp"/>

            <EditText
                android:maxEms="1"
                android:inputType="textPassword"
                android:id="@+id/new_password"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:background="@null"
                android:hint="Password" />

        </LinearLayout>

        <TextView
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:id="@+id/figuran"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent">

        <ProgressBar
            android:indeterminate="true"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="#a69393"
            android:id="@+id/loading"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonoption"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="16dp">

        <LinearLayout
            android:id="@+id/cancel_button"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_red"
            android:layout_marginVertical="12dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="8dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/cancel_white"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/save_data"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_green"
            android:layout_marginVertical="12dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/save_white"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>